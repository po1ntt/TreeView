<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreeView.MainPage"
             xmlns:controltree="clr-namespace:TreeView.Controls.TreeView"
             Background="#111"
             Title=""
             Shell.NavBarIsVisible="False"
             xmlns:vm="clr-namespace:TreeView.Controls.ViewModelsControl"
             x:Name="thisPage"
             >

  
    <ScrollView>

        <VerticalStackLayout>


            <ScrollView Orientation="Both" HorizontalScrollBarVisibility="Always">

                <VerticalStackLayout
                    Margin="10"
                    VerticalOptions="StartAndExpand"
                    BindableLayout.ItemsSource="{Binding itemTrees}"
                    BindableLayout.ItemTemplateSelector="{StaticResource TreeItemDataSelector}"
                    
                    >

                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>
